bind status P !git push origin

bind main = !git commit --fixup=%(commit)
bind main <Ctrl-R> !git rebase --autosquash -i %(commit)

set blame-view-author = abbreviated
set main-view-author = abbreviated

bind generic d >sh -c 'DELTA_PAGER="less -RKc" git show %(commit)'
bind status d >sh -c 'DELTA_PAGER="less -RKc" git diff %(file)'
