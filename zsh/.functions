#!/usr/bin/env zsh

git_main_branch() {
  local branch
  for branch in main trunk; do
    if command git show-ref -q --verify refs/heads/$branch; then
      echo $branch
      return
    fi
  done
  echo master
}

gclone() {
  git clone "$1" && cd "$(basename "$1" .git)"
}

localsync () {
  if [ $# -lt 2 ]; then
    echo "Needs at least two arguments"
    return 1
  fi

  rsync -ar \
    --exclude='node_modules' \
    --exclude='.gitignore' \
    --exclude='.git' \
    --exclude='.DS_Store' \
    "$1" "$2"
}

yqp () {
  # patch "$2" <<< $(diff -U0 -w -b --ignore-blank-lines $2 <(yq $1 $2))
  diff=$(diff -U0 -w -b --ignore-blank-lines $2 <(yq $1 $2))
  line=$(echo $diff| grep '@@' | cut -f2 -d ' ' | sed 's/-//')

  echo $diff | patch --no-backup-if-mismatch $2
  sed $line"s/$/\n/" $2 -i
}

findrename () {
        fd $1 | xargs -n 1 rename "s/$1/$2/g"
}

findreplace () {
        rg $1 --files-with-matches -0 | xargs -0 gsed -i "s/$1/$2/g"
}
