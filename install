#!/usr/bin/env zsh

cd "$(dirname "${BASH_SOURCE}")";

echo "Ensuring ~/code exists"
mkdir -p ~/code

echo "Ensuring ~/work-dotfiles is cloned"
[ ! -d ~/work-dotfiles ] && git clone git@github.com:jacktuck/work-dotfiles.git ~/work-dotfiles

echo "Checking Homebrew"
if ! command -v brew &>/dev/null; then
    echo "Installing Homebrew"
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
    # Add Homebrew to PATH immediately for this shell
    if [[ -x "/opt/homebrew/bin/brew" ]]; then
        eval "$(/opt/homebrew/bin/brew shellenv)"  # Apple Silicon
    elif [[ -x "/usr/local/bin/brew" ]]; then
        eval "$(/usr/local/bin/brew shellenv)"  # Intel
    fi
else
    echo "Homebrew already installed; skipping"
fi

echo "Installing Brew bundle dependencies"
brew bundle install --no-upgrade

echo "Stowing dotfiles into $HOME"
stow --adopt .

echo "Setting up tmux plugins (TPM)"
TPM_DIR="$HOME/.tmux/plugins/tpm"
if [ ! -d "$TPM_DIR" ]; then
    git clone https://github.com/tmux-plugins/tpm "$TPM_DIR"
fi
[ -x "$TPM_DIR/bin/install_plugins" ] && "$TPM_DIR/bin/install_plugins"
